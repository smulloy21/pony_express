<h1>Welcome to the Pony E-Press!</h1>
<form action='/shipping_costs'>
  <h3>My parcel is:</h3>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label for="length">Length</label>
        <input id="length" name="length" placeholder="knuckles"class="form-control" type="text">
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label for="width">Width</label>
        <input id="width" name="width" placeholder="knuckles" class="form-control" type="text">
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label for="height">Height</label>
        <input id="height" name="height" placeholder="knuckles" class="form-control" type="text">
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="weight">Weight</label>
    <input id="weight" name="weight" placeholder="bricks" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="distance">Distance</label>
    <input id="distance" name="distance" placeholder="miles" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-primary">Get Cost</button>

</form>
